<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Player Index</title>
</head>

<body>
    <a href="/">Home</a>
    <h1>All Players</h1>
    <ul>
        <% allPlayers.forEach(player => { %>
            <li><a href="/players/<%= player._id %>">
                    <%= player.name %>
                </a></li>
        <% }) %>
    </ul>
    <br>
    <br>
    <a href="/players/new">Add new Player</a>
    <br>
    <br>
    <a href="/teams">View all Teams</a>
</body>

</html>